<?xml version='1.0' encoding='utf-8'?>
<widget id="it.zanichelli.appTest" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>appTest</name>
    <description>
        ISBN data retriever (First cordova application developed in cordova course)
    </description>
    <author email="gsiciliano@zanichelli.it" href="http://www.zanichelli.it">
        Gianluca Siciliano
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <hook type="after_prepare" src="scripts/cordova-icon.bat" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="phonegap-plugin-barcodescanner" spec="~5.0.0" />
    <plugin name="cordova-plugin-geolocation" spec="~2.2.0" />
    <engine name="browser" spec="~4.1.0" />
    <engine name="android" spec="~5.1.1" />
</widget>
